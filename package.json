{
  "name": "lifecycle-action",
  "version": "4.4.3",
  "description": "Automate software lifecycle tracking with intelligent EOL detection, multi-channel notifications, and seamless CI/CD integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt && npm run build:cleanup",
    "build:cleanup": "find dist -type f \\( -name '*.d.ts' -o -name '*.d.ts.map' \\) -delete && find dist -type d -empty -delete && echo 'Cleaned up TypeScript declaration files from dist/'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:fuzz": "jest --testPathPattern=fuzz",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "prepare": "husky install",
    "all": "npm run format && npm run lint && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/broadsage/lifecycle-action.git"
  },
  "keywords": [
    "github-action",
    "endoflife",
    "version-tracking",
    "dependency-management",
    "security",
    "automation"
  ],
  "author": "Broadsage",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/cache": "^3.3.0",
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@actions/http-client": "^2.2.3",
    "@types/js-yaml": "^4.0.9",
    "date-fns": "^3.6.0",
    "js-yaml": "^4.1.1",
    "p-limit": "^7.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-jest": "^27.9.0",
    "fast-check": "^4.5.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "nock": "^13.5.6",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.20.0"
  }
}